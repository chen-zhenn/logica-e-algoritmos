{
    "env": {
    "browser": true,
    "es2021": true
    },
    "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "idiomatic"
    ],
    "overrides": [],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
    },
    "plugins": [
    "@typescript-eslint"
    ],
    "rules": {
    "combine-const-and-let": "off",
    "one-var": "off",
    "no-unused-vars": "error",
    "@typescript-eslint/no-unused-vars": "error",
    "indent": [
    "error",
    4
    ],
    "linebreak-style": [
    "error",
    "unix"
    ],
    "quotes": [
    "error",
    "double"
    ],
    "semi": [
    "error",
    "always"
    ]
    },
    "ignorePatterns": [
    "node_modules",
    "dist"
    ]
    }